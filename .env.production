# Production Environment Configuration
# Copy to .env and fill in your actual API credentials

# Binance API Credentials (REQUIRED for live trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_key_here
BINANCE_TESTNET=false  # Set to false for live trading

# Trading Configuration
LIVE_TRADING=true
DEMO_MODE=false
MAX_POSITION_SIZE=500.0
DAILY_LOSS_LIMIT=150.0  # $150 daily loss limit

# Risk Management
KILL_SWITCH_ENABLED=true
EMERGENCY_EXIT_THRESHOLD=0.15  # 15% portfolio loss
MAX_DRAWDOWN_LIVE=0.08  # 8% max drawdown in live mode

# Database & Storage
OMS_DB=data/live_state.db
STATE_JSON=data/live_state.json
SIGNAL_PATH=data/live_signal.json
LOG_FILE=logs/live_trading.log

# Monitoring & Alerts
DISCORD_WEBHOOK_URL=your_discord_webhook_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_TO=your_alerts_email@gmail.com

# Performance Tracking
METRICS_ENABLED=true
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
AUTO_RESTART=true
MAX_RESTARTS=3

# Exchange Rate Limits (requests per minute)
BINANCE_RATE_LIMIT=1200
API_RETRY_ATTEMPTS=3
API_TIMEOUT=10

# Advanced Features
ML_MODELS_ENABLED=true
SENTIMENT_ANALYSIS_ENABLED=true
ONCHAIN_ANALYSIS_ENABLED=true
WEBSOCKET_ENABLED=true
LATENCY_MONITORING=true

# Security
API_IP_RESTRICTIONS=true  # Enable IP restrictions on exchange
SECURE_LOGS=true  # Mask sensitive data in logs
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600  # Backup every hour
